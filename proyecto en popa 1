//ESTRUCTURAS
struct reggastronomia
{
	string nombre;
	
	string direccion;

	char telefono;

	string email;

	string tipo; // tipo de comida

};


struct regmecanico
{
	string nombre;

	string direccion;

	char telefono;

	string email;

};


struct regfarmacia

{
	string nombre;

	string direccion;

	char telefono;

	string email;

};

//GASTRONOMIA
void menugastronomia()
{
	int opcion;

	cout<<"----MENU DE GASTRONOMIA----"<<endl;
	cout<<"1.- CREAR ARCHIVO RESTAURANTE"<<endl;
	cout<<"2.- MOSTRAR ARCHIVO RESTAURANTE"<<endl;
	cout<<"3.- AÑADIR RESTAURANTES"<<endl;
	cout<<"4.- ELIMINAR RESTAURANTES"<<endl;
	cout<<"0.- SALIR"<<endl;
	cin>>opcion;
	do{
		switch(opcion)
		{
			case 1:		
					break;
	
	
			case 2:
		
					break;
	
	
			case 3: 
					break;


			case 4:
					break;


			case 0:
			
					break;

	default: cout<<"opcion invalida"<<endl;
	}
	}while(opcion!=0);

}




