//PRINCIPAL
int main()
{
	int opcion;

	cout<<"--------BIENVENIDO A SERVI-AGENDA--------"<<endl;
	cout<<"1.-Servicio de Gastronomia"<<endl;
	cout<<"2.-Servicio de Mecanica en gral"<<endl;
	cout<<"3.-Servicio de Farmacias"<<endl;
	cout<<"0.- SALIR"<<endl;
	cin>>opcion;
	do{

	switch(opcion)
	{
	case 1: 
			break;
	
	case 2:
		
			break;
	
	case 3: 
			break;

	case 0:
			break;

	default: cout<<"opcion invalida"<<endl;
	}while(opcion!=0);


	}


	getch();
}
